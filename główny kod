#include <iostream>
#include <string>
#include <stdio.h>
#include <string.h>
using namespace std;

class Figura
{
public:
virtual ~Figura (){}
virtual void rysuj()=0;
virtual void przesuń()=0;
virtual void obrót ()=0;

};

class Kwadrat:public Figura
{
virtual void rysuj ()
{
 std::cout << "Rysuje kwadrat: [ ]" << std::endl;
}
virtual void przesuń ()
{
 std::cout << "Przemieszczam kwadrat:     [ ]" << std::endl;
}
virtual void obrót ()
{
 std::cout << "Obracam kwadrat:     [ ] " << std::endl;
}
};

class Okrąg:public Kwadrat
{
virtual void rysuj ()
{
 std::cout << "Rysuje okrąg: o" << std::endl;
}

virtual void przesuń ()
{
 std::cout << "Przemieszczam okrąg:     o" << std::endl;
}
virtual void obrót ()
{
 std::cout << "Obracam okrąg:     o " << std::endl;
}
};

class Prostokąt:public Kwadrat
{
virtual void rysuj ()
{
 std::cout << "Rysuje prostokąt: [  ]" << std::endl;
}

virtual void przesuń ()
{
 std::cout << "Przemieszczam prostokąt:     [  ]" << std::endl;
}

virtual void obrót ()
{
 std::cout << "Obracam prostokąt:     []" << std::endl;
}
};

class Trójkąt: public Figura
{
virtual void rysuj ()
{
 std::cout << "Rysuje trójkąt: ^" << std::endl;
}

virtual void przesuń ()
{
 std::cout << "Przemieszczam trójkąt:     ^" << std::endl;
}

virtual void obrót ()
{
 std::cout << "Obracam trójkąt:     > " << std::endl;
}
};

class Trapez
{
virtual void rysuj ()
{
 std::cout << "Rysuje trapez: /_|" << std::endl;
}

virtual void przesuń ()
{
 std::cout << "Przemieszczam trapez:     /_|" << std::endl;
}

virtual void obrót ()
{
 std::cout << "Obracam trapez:     /-| " << std::endl;
}
};

class Prostopadłościan 
{
private:
int a;
int b;
int h;
int pole;
public:
int licz_objętość();
void wczytaj()
{
  cout<<"podaj długość a: "<<endl;
  cin>>a;
  cout<<"podaj długość b: "<<endl;
  cin>>b;
  cout<<"podaj długośc h: "<<endl;
  cin>>h;
};

int Prostopadłościan::licz_objętość()
{
  return a*b*h;
};
class Sześcian
{
private:
int bok_a;

public:
int licz_objętość();

void wczytaj()
{
 
  cout<<"podaj długość boku a: "<<endl;
  cin>>bok_a;
  };
  
 int Sześcian::licz_objętość()
{
  return bok_a*bok_a*bok_a;
}

};

int main ()
{

  Figura * a = new Okrąg, * b = new Kwadrat,*c=new Prostokąt,*d=new Elipsa,*e= new Trójkąt;*f= new Trapez
    
  a->rysuj();
  b->rysuj();
  c->rysuj();
  d->rysuj();
  e->rysuj();
  f->rysuj();
  
  cout<<endl;

  a->przesuń();
  b->przesuń();
  c->przesuń();
  d->przesuń();
  e->przesuń();
  f->przesuń();
  
  cout<<endl;

  a->obrót();
  b->obrót();
  c->obrót();
  d->obrót();
  e->obrót();
  f->obrót();
  
  delete a;
  delete b;
  delete c;
  delete d;
  delete e;
  delete f;


  Prostopadłościan P1;
  P1.wczytaj();
  cout << "objętość prostopadłościanu wynosi: " << P1.licz_objętość(); 
  return 0;
  
  Sześcian S1;
  S1.wczytaj();
  cout<<"objętość sześcianu wynosi: "<<S1.licz_objętość():
  return 0;
  
};



